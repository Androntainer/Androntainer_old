<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="control_drawer,
                            control_menu,
                            control_apps,
                            control_search,
                            control_select"
        app:flow_horizontalGap="10dp"
        app:flow_verticalGap="10dp"
        app:flow_wrapMode="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/control_drawer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:contentDescription="@string/todo"
        android:scaleType="center"
        android:src="@drawable/ic_baseline_menu_24"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/control"
        app:layout_constraintTop_toTopOf="@id/control"
        app:round="88dp" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/control_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:contentDescription="@string/todo"
        android:scaleType="center"
        android:src="@drawable/ic_baseline_more_vert_24"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/control"
        app:layout_constraintStart_toEndOf="@+id/control_drawer"
        app:layout_constraintTop_toTopOf="@id/control"
        app:round="88dp" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/control_apps"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:contentDescription="@string/todo"
        android:scaleType="center"
        android:src="@drawable/ic_baseline_apps_24"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/control"
        app:layout_constraintStart_toEndOf="@+id/control_menu"
        app:layout_constraintTop_toTopOf="@id/control"
        app:round="88dp" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/control_search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:contentDescription="@string/todo"
        android:scaleType="center"
        android:src="@drawable/ic_baseline_search_24"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/control"
        app:layout_constraintStart_toEndOf="@+id/control_apps"
        app:layout_constraintTop_toTopOf="@id/control"
        app:round="88dp" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/control_select"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:contentDescription="@string/todo"
        android:scaleType="center"
        android:src="@drawable/ic_baseline_select_all_24"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/control"
        app:layout_constraintStart_toEndOf="@+id/control_search"
        app:layout_constraintTop_toTopOf="@id/control"
        app:round="88dp" />

</androidx.constraintlayout.widget.ConstraintLayout>